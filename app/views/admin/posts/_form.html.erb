<div class="row">
<%= simple_form_for [:admin, @post] do |f| %>
  <div class="form-inputs">
    <div class="large-9 columns">
      <%= f.input :title, placeholder: 'Post Title' %>
    </div>
    <div class="large-3 columns">
      <%= f.input :image_url %>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-9 columns">
    <%= f.text_area :content, class: 'tinymce', rows: 100, cols: 600 %>
  </div>
  <div class="form-actions">
    <div class="large-3 columns text-center">
    <%= link_to 'Preview', @post, :class => 'button [ tiny success ]' %> | <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button [ tiny alert ]' %>
    <%= f.button :submit %> 
    </div>
  </div>
<% end %>
</div>


