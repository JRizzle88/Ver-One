<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@post.errors.count, "error") %>
      prohibited this order from being saved:</h5>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :image_url %>
    <%= f.input :content %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
<% end %>
