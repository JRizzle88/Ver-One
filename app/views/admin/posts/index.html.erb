<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th width="200">Title</th>
      <th width="275">Image url</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Preview', post, :class => 'button [ tiny success ]' %></td>
        <td><%= link_to post.title, edit_admin_post_path(post) %></td>
        <td class="th custom-th-blog"><%= image_tag(post.image_url) %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button [ tiny alert ]' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_admin_post_path %>
<p><%= will_paginate @posts, :class => 'pagination-centered' %></p>