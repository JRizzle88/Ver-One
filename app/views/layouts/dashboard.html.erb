<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Verone" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Verone" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
     <!--[if IE]>
     <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
   <![endif]-->
   <!-- <link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
   <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" /> -->

	<link href='http://fonts.googleapis.com/css?family=Roboto:500,700,400' rel='stylesheet' type='text/css'>

  </head>
  <body class="<%= controller_name %> <%= action_name %>" style="background-color: #F5F5F5;">
    <div id="container" class="container">

      <header>
		    <%= render 'layouts/dashboardnavigation' %>
	    </header>

	    <div id="cart">
		
	    </div>

      <div id="main" role="main">   
        <%= render 'layouts/dashboard_leftnavigation' %> 
        <div class="rowfull">
          <div class="large-12 columns">
            <%= yield %>
          </div>
        </div>
  	  </div>

    </div> <!--! end of #container -->
  </body>
</html>