  <div class="row">
 
    <!-- Main Blog Content -->
    <div class="large-9 columns" role="content">
 
      <article>
        <% @posts.each do |post| %>
          <div class="row">
            <div class="large-12 columns">
              <%= image_tag(post.image_url) %>
              <h3><%= link_to post.title, post %></h3>
            </div>
          </div>
          <p><%= post.content %></p>
        <% end %>
      </article>
      <hr />
      <%= will_paginate @posts, :class => 'pagination-centered' %>
    </div>
 
