      </ul>
 
      <div class="panel">
        <h5>Featured Posts</h5>
        <% @posts.each do |post| %>
          <h5><%= link_to post.title, post %></h5>
        <% end %>
      </div>
 
    </aside>
 
    <!-- End Sidebar -->
  </div>
 
